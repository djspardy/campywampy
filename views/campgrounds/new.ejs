<% include ../partials/header %>


<div class="container">
    <div class="row mx-auto">
        <h1 class="display-4">Create a new campground</h1>
    </div>
    <div class="row mx-auto" style="margin: 25px">
        <form action="/campgrounds" method="POST">
          <div class="form-group">
            <label for="campgroundName">Campground Name</label>
            <input class="form-control" id="campgroundName" name="name" placeholder="Enter campground name">
            <small id="emailHelp" class="form-text text-muted">People will be able to find this campground with this name.</small>
          </div>
          <div class="form-group">
            <label for="campgroundImage">Campground Image</label>
            <input class="form-control" id="campgroundImage" placeholder="Enter image URL" name = "image">
          </div>
          <div class="form-group">
            <label for="campgroundDescription">Campground Description</label>
            <input class="form-control" id="campgroundDescription" placeholder="Describe your campground" name = "description">
          </div>
          <button type="submit" class="btn btn-secondary">Submit</button>
        </form>
    </div>
    <div class="row mx-auto">
        <a href="/campgrounds">Go back</a>
    </div>
</div>


<% include ../partials/footer %>